{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/firstname",
      "label": "Jméno"
    },
    {
      "type": "Control",
      "scope": "#/properties/lastname",
      "label": "Příjmení"
    },
    {
      "type": "Control",
      "scope": "#/properties/phoneNumber",
      "label": "Telefonní číslo"
    },
    {
      "type": "Control",
      "scope": "#/properties/email",
      "label": "E-mail"
    },
    {
      "type": "Control",
      "scope": "#/properties/pickerDate",
      "label": "Kdy chcete začít stavět?",
      "options": {
        "format": "date"
      }
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/postCode",
          "label": "PSČ stavby"
        },
        {
          "type": "Control",
          "scope": "#/properties/nameBuilding",
          "label": "Obec stavby"
        }
      ]
    },
    {
      "type": "Label",
      "text": "Čím více informací, tím přesnější nabídka"
    },
    {
      "type": "Label",
      "text": "Pro optimální variantu potřebujeme vědět co nejvíc o vašem vysněném domě - rozměry, preference tvárnic, energetického standardu apod. Čím víc nám toho o svém domu napíšete, tím lépe.",
      "options": {
        "size": "small"
      }
    },
    {
      "type": "Control",
      "label": "Požadované přílohy k nacenění projektu: půdorysy, pohledy, řez (vkládejte přílohy do max. 80MB celkem):",
      "scope": "#/properties/fileUpload",
      "options": {
        "showSortButtons": true
      }
    },
    {
      "type": "Control",
      "label": "Zpráva pro nás:",
      "scope": "#/properties/textArea",
      "options": {
        "multi": true
      }
    },
    {
      "type": "Label",
      "text": "Odesláním beru na vědomí tyto informace o zpracování osobních údajů a poučení o mých právech.",
      "options": {
        "size": "small"
      }
    },
    {
      "type": "Control",
      "label": "Souhlasím se zpracováním osobních údajů v rozsahu a za podmínek uvedených zde.",
      "scope": "#/properties/done"
    }
  ]
}
